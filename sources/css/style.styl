@import "nib"

orange = #f5a623
gray = #4A4A4A
green = #90b04b
red = #d65049

full-width()
	float left
	width 100%

html
	overflow hidden

body
	background #f3f2f0
	font-family: CirceWeb-Regular
	full-width()
	overflow-x hidden
	position relative
	min-height 100%
	&.open-side
		#catalog, #nav, #bottom-nav
			transform: translateX(262px)
		#catalog
			.bar
				.trigger
					svg
						path
							fill green

#toolbar, #catalog, .bottom-fade, #nav
	transition-property(transform)
	transition-duration(.2s)
	transition-timing-function(ease-out)

.scroll-wrap
	position fixed
	top 0
	left 0
	bottom 0
	right 0
	pointer-events none
	z-index 100000500000
	&.auto
		pointer-events auto

.animated
	animation-duration: .5s

transition()
	transition-property(all)
	transition-duration(.2s)
a
	transition-property(all)
	transition-duration(.4s)
	transition-timing-function(cubic-bezier(0.75, 0.25, 0.25, 0.75))
	&:hover
		text-decoration none
.center
	text-align center
.right
	text-align right

#catalog
	> .content
		position absolute
		top 0
		left 0
		padding-right 0
		padding-bottom 30px
	
.block
	full-width()
	position relative
	height 100%
	
	&.popup
		display none
		z-index 240
		position fixed
		background #f3f2f0
	.bar
		height 50px
		line-height: 47px
		background rgba(255,255,255,.96)
		z-index 100
		left 0
		top 0
		transition-property(box-shadow)
		transition-duration(.4s)
		full-width()
		position fixed
		animation-name zoomIn
		.tooltip
			min-width 240px
			margin-top -5px
			&.bottom .tooltip-arrow
				border-bottom-color red
			.tooltip-inner
				max-width 100%
				font-family CirceWeb-Bold
				background red
		&.shadow
			box-shadow 0 2px 25px rgba(0,0,0,.4)
		.row
			> div
				padding 0
		a, span
			display inline-block
			height 49px
			min-width 49px
			text-align center
			&.trigger
				&.animated
					animation-iteration-count infinite
					animation-name zoomIn
					animation-duration: 1.5s
					animation-fill-mode: both
				margin-top: 0px
				svg
					max-width 27px
					path
						fill black
			&.cart
				svg
					max-width 27px
					&:hover
						g
							fill red
			&.logo
				full-width()
				svg
					max-width  150px
			&.back
				full-width()
				text-align left
				position relative
				color #9b9b9b
				svg
					max-height 22px
				span
					position relative
					top 2px
					font-size 15px
					diplay inline-block
			&.title
				font-family CirceWeb-Bold
				font-size 19px
				position relative
				top 1px
				color red
			svg
				vertical-align middle
				diplay inline-block
				max-height 50px
				g
					transition-property(all)
					transition-duration(.4s)
	.wrap, .frame
		full-width()
	> .content
		&.index
			padding-top 50px
			margin-bottom 12px
		full-width()
		height 100%
		padding: 62px 10px 0 0
		-webkit-overflow-scrolling: touch
		overflow-y scroll
		overflow-x hidden
		.switcher
			full-width()
			@media screen and (min-width: 768px)
				max-width 400px
				margin-left -200px
				left 50%
				position relative
			border-radius 3px
			.left
				border-radius 5px 0px 0px 5px
				
				left 1px
			a
				position relative
				float left
				color #707984
				border-radius 0px 5px 5px 0px
				border 1px solid #707984
				opacity .6
				line-height 25px
				width 50%
				text-align center
				border-collapse collapse
				&.active
					border-color orange
					color orange
					opacity 1
					z-index 2
					
		.elements
			full-width()
			position relative
			overflow hidden
			padding 0 10px
			.user-info
				@media screen and (min-width: 768px)
					max-width 400px
					margin 0 auto
			.item
				float left
				width 100%
				border-bottom 1px solid #d0cfcf
				margin-top 15px
				&:first-of-type
					margin-top 10px
				
				> .row
					margin 0
					margin-bottom 10px
					> div
						&:first-of-type
							padding-left 0
						&:last-of-type
							padding-right 0
						padding 0 5px
				.image
					display inline-block
					box-shadow inset 0 0 0 3px #f3f2f0
					background-size contain
					background-position center center
					height 84px
					width 84px
					border-radius 10px
					border 2px solid #f5a623
				.name
					float left
					full-width()
					font-size 17px
					line-height 17px
					color black
					height 37px
					margin-top 5px
					margin-bottom 10px
					overflow hidden
					font-family CirceWeb-Light
				
				.buy
					full-width()
					height 30px
					background white
					border-radius 30px
					line-height 29px
					margin-top -1px
					text-align center
					box-shadow inset 0 0 0 3px #f3f2f0
					border 2px solid #f5a623
					text-transform uppercase
					font-size 9px
					font-family 'CirceWeb-Bold'
					color #333
				.price
					font-size 22px
					letter-spacing 1px
					font-family CirceWeb-Bold
					svg
						height 16px
						display inline-block
						position relative
						top 0px
						margin-left 3px
						path
							fill #333333
				@media screen and (min-width: 480px)
					&:first-of-type
						margin-top 15px
					width 50%
					&:nth-child(2n+1)
						padding-right 10px
					&:nth-child(2n)
						padding-left 10px
					.image
						height 65px
						width 65px
					.buy
						width 115%
						float right
					.price
						font-size 16px
						margin-top 5px
						svg
							height 11px
							margin-left 0
				@media screen and (min-width: 500px)
					width (100/2)%
					.image
						height 84px
						width 84px
					.price
						font-size 22px
						margin-top 0px
						svg
							height 16px
							margin-left 3px
					.buy
						width 100%
				@media screen and (min-width: 960px)
					width (100/3)%
				@media screen and (min-width: 1200px)
					width (100/4)%
