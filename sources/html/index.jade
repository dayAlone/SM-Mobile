include includes/header
#catalog.block.main
	.bar
		.container-fluid
			.row
				.col-xs-2
					a.trigger.animated(data-toggle="tooltip", data-placement="bottom", title="У нас очень много товаров, загляни сюда.")
						include ../../public_html/layout/images/svg/nav.svg
				.col-xs-8.center
					a.logo(href="/")
						include ../../public_html/layout/images/svg/logo.svg
			//	
				.col-xs-2.right
					a.toggle.cart(href="#cart")
						include ../../public_html/layout/images/svg/cart.svg
	.content.index
		.fotorama(data-width="100%", data-height="155px", data-nav="false")
			.item(style="background-image: url(/layout/images/tmp/banner-bg.png)")
				img(src="/layout/images/tmp/banner-img.png")
			.item(style="background-image: url(/layout/images/tmp/banner-bg.png)")
				img(src="/layout/images/tmp/banner-img.png")
		.frame
			.elements
				each item in products
					.item
						.row
							.col-xs-4.center
								a.toggle.image(href="#product",style="background-image:url(#{item.image}); #{item.bsize ? 'background-size: cover' : ''}")
							.col-xs-8
								a.name(href="#product").toggle= item.name
								.row
									.col-xs-5
										.price
											nobr
												= item.price
												include ../../public_html/layout/images/svg/currency.svg
									.col-xs-7
										a.buy(href="#")
											.content В корзину
	.bottom-fade
		a(href="#")
			include ../../public_html/layout/images/svg/loading.svg
			span Загрузить еще 

include includes/footer		